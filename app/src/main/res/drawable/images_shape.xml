<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval">
        <corners
            android:radius="45dp"/>
        <solid
            android:color="#BABABA"/>
        <size
            android:height="70dp"
            android:width="60dp"/>
    </shape>
</item>
    <!--shadow-->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="1.5dp">


            <shape xmlns:android="http://schemas.android.com/apk/res/android"
                android:shape="oval"
                >

                <corners
                    android:radius="45dp"/>
                <solid
                    android:color="@color/white"/>
                <size
                    android:height="70dp"
                    android:width="60dp"/>
            </shape>
        </item>
</layer-list>








